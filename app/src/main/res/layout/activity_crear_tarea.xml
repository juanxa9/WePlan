<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearTarea">

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="555dp"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_addTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Crear nueva tarea : "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="textPersonName"
            android:text="nombre de la tarea"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_saveTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#EDD8F0"
            android:backgroundTint="#FF5722"
            android:gravity="right"
            android:text="guardar"
            android:textAlignment="gravity"
            android:onClick="writeToDataBase"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>